.side-bar
  .side-header
    .side-header__box
      .side-header__box__user-name
        = current_user.name
      .side-header__box__menu
        .side-header__box__menu__left
        = link_to new_group_path, class: "side-header__box__menu__left__btn--edit" do
          = icon('fas', 'edit')
        .side-header__box__menu__right
        = link_to edit_user_path(current_user), class: "side-header__box__menu__right__btn--cog" do
          = icon('fas', 'cog')
  
  .groups
    - current_user.groups.each do |group|
      .groups__new
        = link_to group_messages_path(group) do
          .groups__new__name
            = group.name
          .groups__new__text
            = group.show_last_message